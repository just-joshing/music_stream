<form id="search_form" method="get" action=<%= "/admin/user/#{@user.id}" %>>
	<%= text_field_tag :search, params[:search], autofocus: true %>
	<%= submit_tag "Search", name: nil %>
</form>

<%= form_tag "/admin/user/#{@user.id}", method: :delete, data: { confirm: 'Are you sure you want to delete the selected songs?' }, id: 'delete_music_form' do %>
	<%= submit_tag "Delete Selected" %>
<% end %>

<table class="rounded">
	<tr>
		<th class="checkbox_cell"><input id="check_all" type="checkbox"/></th>
		<th>Title</th>
		<th>Artist</th>
		<th>Album</th>
	</tr>

	<% @songs.each do |song| %>
		<tr class="<%= cycle('shaded', '') %>">
			<td class="checkbox_cell">
				<input name="songs[]" form="delete_music_form" type="checkbox" value="<%= song.id %>"/>
			</td>
			<td><%= song.title %></td>
			<td><%= song.artist %></td>
			<td><%= song.album %></td>
		</tr>
	<% end %>
</table>