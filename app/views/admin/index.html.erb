<h1>Admin Page</h1>
<p>Welcome <%= @admin.name %></p>
<p>Love, HAL 9000</p>

<hr>

<h1>Listing users</h1>

<table class="rounded">
<% @users.each do |user| %>
  <tr class="<%= cycle('shaded', '') %>">
    <td>
      <div><%= image_tag user.avatar.url(:thumb) %></div>
    </td>
    <td>
			<div><strong>Email: </strong><%= user.email %></div>
			<div><strong>Name: </strong><%= user.name %></div>
      <div><strong># Songs Uploaded: </strong><%= Song.count(:conditions => "user_id=#{user.id}") %>
    </td>
    <td>
      <div><%= link_to 'Edit', "/admin/user/#{user.id}" %></div>
      <div><%= link_to 'Delete', "/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </td>
  </tr>
<% end %>
</table>